{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "subject-case": [
            2,
            "always",
            "lower-case"
        ],
        "subject-max-length": [
            2,
            "always",
            72
        ],
        "type-enum": [
            2,
            "always",
            [
                "build",
                "chore",
                "ci",
                "docs",
                "feat",
                "fix",
                "perf",
                "refactor",
                "revert",
                "style",
                "test",
                "security"
            ]
        ]
    }
}