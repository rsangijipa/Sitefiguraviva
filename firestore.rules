rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    function isPublished(resourceData) {
      return resourceData.published == true;
    }

    // Check if user has an ACTIVE enrollment for the course
    function isEnrolledActive(courseId) {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(courseId)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(courseId)).data.status == 'active';
    }

    // --- Collections ---

    // Posts (Blog)
    match /posts/{postId} {
      allow read: if isPublished(resource.data) || isAdmin();
      allow write: if isAdmin();
    }

    // Public Docs (Policies, etc)
    match /publicDocs/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Pages (Content)
    match /pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Gallery
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Courses
    match /courses/{courseId} {
      allow read: if isPublished(resource.data) || isAdmin();
      allow write: if isAdmin();

      // Subcollections: Modules, Lessons, Materials
      // Valid access: Admin OR (Course Published AND User Enrolled Active)
      match /modules/{moduleId} {
        allow read: if isAdmin() || (isPublished(get(/databases/$(database)/documents/courses/$(courseId)).data) && isEnrolledActive(courseId));
        allow write: if isAdmin();

        match /lessons/{lessonId} {
          allow read: if isAdmin() || (isPublished(get(/databases/$(database)/documents/courses/$(courseId)).data) && isEnrolledActive(courseId));
          allow write: if isAdmin();
        }
      }

      match /materials/{materialId} {
        allow read: if isAdmin() || (isPublished(get(/databases/$(database)/documents/courses/$(courseId)).data) && isEnrolledActive(courseId));
        allow write: if isAdmin();
      }
    }

    // Users
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin(); // Allow user to update own profile

      // User Enrollments (Portal Read Path)
      match /enrollments/{enrollmentId} {
        allow read: if isOwner(userId) || isAdmin();
        // Allow user to write progress (e.g. marking lesson complete) but NOT status
        allow write: if isAdmin() || (isOwner(userId) && 
                     (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'subscriptionId'])));
      }
    }

    // Global Enrollments Ledger (Admin/System Only)
    match /enrollments/{enrollmentId} {
       allow read, write: if isAdmin();
    }

    // Documents (Private)
    match /documents/{docId} {
       allow read: if request.auth != null || isAdmin(); 
       allow write: if isAdmin();
    }
    
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; 
    }
  }
}
