rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================================
    // 1. HELPER FUNCTIONS
    // =========================================================================

    // Basic Auth
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    // Role Checks
    // Prioritize Custom Claims (fast) -> Fallback to Doc (slow but SSoT) -> Hardcoded Super Admin (failsafe)
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.admin == true || 
        request.auth.token.role == 'admin' ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin') ||
        request.auth.token.email.matches('.*@figuraviva\\.com.*') || 
        request.auth.token.email == 'liliangusmao@institutofiguraviva.com.br' ||
        request.auth.token.email == 'erlanesangi@gmail.com' ||
        request.auth.token.email == 'rsangijipa@gmail.com'
      );
    }

    function isDocOwner() {
      return isAuthenticated() && (
        resource.data.uid == request.auth.uid || 
        resource.data.userId == request.auth.uid
      );
    }

    // Enrollment Check (SSoT)
    // Path: enrollments/{uid}_{courseId}
    function hasActiveEnrollment(courseId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId)) &&
        get(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId)).data.status == 'active';
    }

    // Content Visibility
    function isPublished() {
      return resource.data.isPublished == true;
    }
    
    function isCourseOpen() {
      return resource.data.status == 'open';
    }

    // =========================================================================
    // 2. USERS COLLECTION (Identity & Role)
    // =========================================================================
    match /users/{uid} {
      // Read: Admin or Owner (to see own profile)
      allow read: if isAdmin() || isOwner(uid);

      // Create: Owner (e.g. on first login)
      // DENY: Setting 'role' or 'metrics' (only Admin/Backend can set these)
      allow create: if isOwner(uid) && 
        (!request.resource.data.keys().hasAny(['role', 'metrics', 'subscriptionStatus']));

      // Update: Owner (Profile fields only)
      allow update: if isOwner(uid) && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'phoneNumber', 'bio', 'socialLinks', 'updatedAt'])
        // INVARIANT: Cannot change role
        && request.resource.data.role == resource.data.role;

      // Admin has full write access
      allow write: if isAdmin();

      // Notifications Subcollection
      match /notifications/{notifId} {
        allow read, write: if isOwner(uid);
      }
    }

    // =========================================================================
    // 3. ENROLLMENTS SSoT (Access Control)
    // =========================================================================
    match /enrollments/{enrollmentId} {
      // ID Format: {uid}_{courseId}
      
      // Read: Owner or Admin
      allow read: if isAdmin() || (isAuthenticated() && (resource.data.uid == request.auth.uid || resource.data.userId == request.auth.uid));

      // Write: STRICTLY ADMIN (Backend/Server Actions only)
      // Clients never write purely to enrollment
      allow write: if isAdmin();
    }

    // =========================================================================
    // 4. COURSES & CONTENT (LMS)
    // =========================================================================
    match /courses/{courseId} {
      // Public Read (Catalog): Must be Published AND Open
      // OR if user has an active enrollment
      allow read: if (isPublished() && isCourseOpen()) || isAdmin() || hasActiveEnrollment(courseId);
      
      // Write: Admin only
      allow write: if isAdmin();

      // Modules Subcollection
      match /modules/{moduleId} {
         allow read: if (isAdmin() || hasActiveEnrollment(courseId));
         allow write: if isAdmin();

         // Lessons nested within Modules (DEEP NESTING)
         match /lessons/{lessonId} {
            // Lesson Visibility: Enrolled & Lesson is Published
            allow read: if (isAdmin() || (hasActiveEnrollment(courseId) && isPublished()));
            allow write: if isAdmin();
         }
      }

      // Materials Subcollection
      match /materials/{materialId} {
         // Materials Visibility: Enrolled
         allow read: if (isAdmin() || hasActiveEnrollment(courseId));
         allow write: if isAdmin();
      }

      // Announcements Subcollection
      match /announcements/{announcementId} {
         // Announcements Visibility: Enrolled
         allow read: if (isAdmin() || hasActiveEnrollment(courseId));
         allow write: if isAdmin();
      }

      // Community Threads Subcollection
      match /communityThreads/{threadId} {
         allow read: if isAdmin() || hasActiveEnrollment(courseId);
         allow create: if isAuthenticated() && hasActiveEnrollment(courseId);
         allow update, delete: if isAdmin() || (isAuthenticated() && resource.data.authorId == request.auth.uid);
      }
    }

    // =========================================================================
    // 5. PROGRESS & COMPLETION
    // =========================================================================
    match /progress/{docId} {
      // ID: {uid}_{courseId}_{lessonId}
      
      // Read: Owner or Admin
      // Read: Owner or Admin
      allow read: if isAdmin() || isDocOwner();

      // Write: Owner (Mark as complete)
      // Constraint: Must have active enrollment
      allow write: if isAdmin() || (
        isAuthenticated() && 
        request.resource.data.userId == request.auth.uid &&
        hasActiveEnrollment(request.resource.data.courseId)
      );
    }

    // =========================================================================
    // 6. CERTIFICATES & AUDIT
    // =========================================================================
    match /certificates/{certId} {
      allow read: if isAdmin() || isDocOwner();
      allow write: if isAdmin();
    }

    match /certificatePublic/{code} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /audit_logs/{logId} {
      // Audit logs are READ-ONLY for Admins
      // WRITES only from Service Accounts (Admin SDK bypasses anyway)
      allow read: if isAdmin();
      allow write: if isAdmin(); 
    }

    // =========================================================================
    // 7. SITE SETTINGS & METADATA
    // =========================================================================
    match /siteSettings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /courseMetadata/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // =========================================================================
    // 8. EVENTS & AGENDA
    // =========================================================================
    match /events/{eventId} {
      allow read: if resource.data.isPublic == true || 
                    isAdmin() || 
                    (isAuthenticated() && (resource.data.courseId == null || hasActiveEnrollment(resource.data.courseId)));
      allow write: if isAdmin();
    }

    // =========================================================================
    // 9. COMMUNITY & FORUM
    // =========================================================================
    match /community/{threadId} {
      allow read: if isAdmin() || (isAuthenticated() && hasActiveEnrollment(resource.data.courseId));
      allow create: if isAuthenticated() && hasActiveEnrollment(request.resource.data.courseId);
      allow update, delete: if isAdmin() || (isAuthenticated() && resource.data.authorId == request.auth.uid);

      match /replies/{replyId} {
         allow read: if isAdmin() || (isAuthenticated() && hasActiveEnrollment(get(/databases/$(database)/documents/community/$(threadId)).data.courseId));
         allow create: if isAuthenticated() && hasActiveEnrollment(get(/databases/$(database)/documents/community/$(threadId)).data.courseId);
         allow update, delete: if isAdmin() || (isAuthenticated() && resource.data.authorId == request.auth.uid);
      }
    }

    // =========================================================================
    // 10. ASSESSMENTS & QUIZZES
    // =========================================================================
    match /assessments/{assessmentId} {
      // Read: Published assessments visible to enrolled students, all visible to admins
      allow read: if isAdmin() || 
        (isAuthenticated() && resource.data.status == 'published' && hasActiveEnrollment(resource.data.courseId));
      
      // Write: Admin only
      allow write: if isAdmin();
    }

    match /assessmentSubmissions/{submissionId} {
      // Read: Owner or Admin
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Create: Students can create their own submissions
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid &&
        hasActiveEnrollment(request.resource.data.courseId);
      
      // Update: Owner can update (for submitting answers), Admin can update (for grading)
      allow update: if isAdmin() || 
        (isAuthenticated() && resource.data.userId == request.auth.uid && resource.data.status == 'pending');
      
      // Delete: Admin only
      allow delete: if isAdmin();
    }

    // =========================================================================
    // 11. PUBLIC DOCS & MEDIA
    // =========================================================================
    match /publicDocs/{docId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }

    match /gallery/{imageId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }

    match /posts/{postId} {
      // Blog posts
      allow read: if true; // Public read
      allow write: if isAdmin();
    }

    // =========================================================================
    // 12. APPLICATIONS & APPROVALS
    // =========================================================================
    match /applications/{applicationId} {
      // Applications for courses/programs
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // =========================================================================
    // 12.5 GAMIFICATION PROFILES
    // =========================================================================
    match /gamification_profiles/{userId} {
      // Read: Owner or Admin
      allow read: if isAdmin() || isOwner(userId);
      
      // Create/Update: Owner (auto-initialization) or Admin
      allow create, update: if isAdmin() || isOwner(userId);
      
      // Delete: Admin only
      allow delete: if isAdmin();
    }

    // =========================================================================
    // 13. PROGRESS TRACKING (Alternative path if using top-level progress)
    // =========================================================================
    match /progress/{progressId} {
      // Already defined above, but ensuring it's accessible
      allow read: if isAdmin() || isDocOwner();
      allow write: if isAdmin() || (
        isAuthenticated() && 
        request.resource.data.userId == request.auth.uid &&
        hasActiveEnrollment(request.resource.data.courseId)
      );
    }

    // =========================================================================
    // 14. CATCH-ALL (DENY)
    // =========================================================================
    // Explicitly deny access to any collection not mentioned above
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
