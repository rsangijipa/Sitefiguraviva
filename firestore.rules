rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    function isPublished(resourceData) {
      return resourceData.published == true;
    }

    // Check if user has an ACTIVE enrollment for the course (ROOT Collection based)
    function isEnrolledActive(courseId) {
       let enrollmentId = request.auth.uid + '_' + courseId;
       return request.auth != null && 
              exists(/databases/$(database)/documents/enrollments/$(enrollmentId)) &&
              (
                get(/databases/$(database)/documents/enrollments/$(enrollmentId)).data.status == 'active'
                // || get(/databases/$(database)/documents/enrollments/$(enrollmentId)).data.status == 'grace' // Future-proof
              );
    }

    // --- Collections ---

    // Posts (Blog)
    match /posts/{postId} {
      allow read: if isPublished(resource.data) || isAdmin();
      allow write: if isAdmin();
    }

    // Public Docs (Policies, etc)
    match /publicDocs/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Pages (Content)
    match /pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Gallery
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Courses
    match /courses/{courseId} {
      allow read: if isPublished(resource.data) || isAdmin();
      allow write: if isAdmin();

      // Subcollections: Modules, Lessons, Materials
      match /modules/{moduleId} {
        allow read: if isAdmin() || (isPublished(get(/databases/$(database)/documents/courses/$(courseId)).data) && isEnrolledActive(courseId));
        allow write: if isAdmin();

        match /lessons/{lessonId} {
          allow read: if isAdmin() || (isPublished(get(/databases/$(database)/documents/courses/$(courseId)).data) && isEnrolledActive(courseId));
          allow write: if isAdmin();
        }
      }

      match /materials/{materialId} {
        allow read: if isAdmin() || (isPublished(get(/databases/$(database)/documents/courses/$(courseId)).data) && isEnrolledActive(courseId));
        allow write: if isAdmin();
      }
    }

    // Users
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin(); 

      // User Enrollments (Strictly Read-Only for User, managed by Backend/Stripe)
      match /enrollments/{enrollmentId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); 
      }
    }

    // Global Enrollments Ledger (Redundant but useful for Admin queries)
    match /enrollments/{enrollmentId} {
       // User can only read their own enrollment
       allow read: if isAdmin() || (resource.data.userId == request.auth.uid);
       // Only Admin (or Backend via Admin SDK) can write enrollments
       allow write: if isAdmin();
    }

    // Documents (Private)
    match /documents/{docId} {
       allow read: if request.auth != null || isAdmin(); 
       allow write: if isAdmin();
    }
    
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; 
    }

    // User Progress (High volume writes)
    match /progress/{progressId} {
      allow read: if isAdmin() || (resource.data.userId == request.auth.uid);
      
      // Create: Must be for self
      allow create: if isAdmin() || (request.resource.data.userId == request.auth.uid);
      
      // Update: Must be own, AND cannot change the owner (immutable userId)
      // Update: Must be own, AND cannot change the owner (immutable userId)
      allow update: if isAdmin() || (
        resource.data.userId == request.auth.uid && 
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.userId == resource.data.userId
      );
    }
    
    // Applications (Internal Forms)
    match /applications/{applicationId} {
      allow read: if isAdmin() || (resource.data.uid == request.auth.uid);
      
      allow create: if isAdmin() || (
        request.auth != null &&
        request.resource.data.uid == request.auth.uid &&
        applicationId == request.resource.data.uid + '_' + request.resource.data.courseId
      );

      allow update: if isAdmin() || (
        request.auth != null &&
        request.resource.data.uid == request.auth.uid &&
        applicationId == request.resource.data.uid + '_' + request.resource.data.courseId &&
        resource.data.status != 'submitted' // Lock after submission
      );
    }

    // Stripe Events (Idempotency Audit)
    match /stripe_events/{eventId} {
      allow read: if isAdmin();
      allow write: if false; // Only Admin SDK writes here
    }

    // System Logs (Observability)
    match /system_logs/{logId} {
        allow read: if isAdmin();
        allow write: if false; // Only Admin SDK writes here (client logs should go via API if needed)
    }

    // Audit Logs
    match /audit_logs/{logId} {
        allow read: if isAdmin();
        allow write: if false; 
    }
  }
}
