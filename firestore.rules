rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helpers ---
    
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function isPublished() {
      return resource.data.isPublished == true;
    }

    function isEnrolled(courseId) {
       // Check if enrollment doc exists and is active for the current user
       let enrollmentPath = /databases/$(database)/documents/users/$(request.auth.uid)/enrollments/$(courseId);
       return exists(enrollmentPath) && get(enrollmentPath).data.status == 'active';
    }

    // --- Public Content (Top of Funnel) ---

    // Blog Posts
    match /posts/{postId} {
      allow read: if isPublished() || isAdmin();
      allow write: if isAdmin();
    }

    // Public Institutional Documents
    match /publicDocs/{docId} {
      allow read: if isPublished() || isAdmin();
      allow write: if isAdmin();
    }
    
    // Pages (Founder, Institute, etc.)
    match /pages/{pageId} {
      allow read: if true; // Usually public
      allow write: if isAdmin();
    }
    
    // Gallery
    match /gallery/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Academic / Course Catalog ---

    // Course Catalog (The course root doc is public for sales page)
    match /courses/{courseId} {
      allow read: if isPublished() || isAdmin();
      allow write: if isAdmin();
      
      // Sub-collections: Restricted to Enrolled Students + Admin
      match /modules/{moduleId} {
         allow read: if isAdmin() || (request.auth != null && isEnrolled(courseId));
         allow write: if isAdmin();
      }
      
      match /lessons/{lessonId} {
         allow read: if isAdmin() || (request.auth != null && isEnrolled(courseId));
         allow write: if isAdmin();
      }
      
      match /materials/{materialId} {
         allow read: if isAdmin() || (request.auth != null && isEnrolled(courseId));
         allow write: if isAdmin();
      }
    }

    // --- User & Enrollments ---

    match /users/{userId} {
      allow read: if isAdmin() || request.auth.uid == userId;
      allow write: if isAdmin() || request.auth.uid == userId; // Users can edit their own basic profile

      // Enrollments Subcollection
      match /enrollments/{enrollmentId} {
        // enrollmentId should ideally be the courseId for easy lookup
        allow read: if isAdmin() || request.auth.uid == userId;
        allow write: if isAdmin(); // Only admin (or backend) processes enrollments
      }
    }
    
    // --- Legacy / Others ---
    
    // Documents (Legacy collection, migrating to publicDocs)
    match /documents/{docId} {
       allow read: if request.auth != null || isAdmin(); 
       allow write: if isAdmin();
    }
    
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; 
    }
  }
}
