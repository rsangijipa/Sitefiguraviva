rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================================
    // 1. HELPER FUNCTIONS
    // =========================================================================

    // Basic Auth
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    // Role Checks
    // Prioritize Custom Claims (fast) -> Fallback to Doc (slow but SSoT) -> Hardcoded Super Admin (failsafe)
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.admin == true || 
        request.auth.token.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        request.auth.token.email.matches('.*@figuraviva.com') || 
        request.auth.token.email == 'liliangusmao@institutofiguraviva.com.br'
      );
    }

    // Enrollment Check (SSoT)
    // Path: enrollments/{uid}_{courseId}
    function hasActiveEnrollment(courseId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId)) &&
        get(/databases/$(database)/documents/enrollments/$(request.auth.uid + '_' + courseId)).data.status == 'active';
    }

    // Content Visibility
    function isPublished() {
      return resource.data.isPublished == true;
    }
    
    function isCourseOpen() {
      return resource.data.status == 'open';
    }

    // =========================================================================
    // 2. USERS COLLECTION (Identity & Role)
    // =========================================================================
    match /users/{uid} {
      // Read: Admin or Owner (to see own profile)
      allow read: if isAdmin() || isOwner(uid);

      // Create: Owner (e.g. on first login)
      // DENY: Setting 'role' or 'metrics' (only Admin/Backend can set these)
      allow create: if isOwner(uid) && 
        (!request.resource.data.keys().hasAny(['role', 'metrics', 'subscriptionStatus']));

      // Update: Owner (Profile fields only)
      allow update: if isOwner(uid) && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'phoneNumber', 'bio', 'socialLinks', 'updatedAt'])
        // INVARIANT: Cannot change role
        && request.resource.data.role == resource.data.role;

      // Admin has full write access
      allow write: if isAdmin();
    }

    // =========================================================================
    // 3. ENROLLMENTS SSoT (Access Control)
    // =========================================================================
    match /enrollments/{enrollmentId} {
      // ID Format: {uid}_{courseId}
      
      // Read: Owner or Admin
      allow read: if isAdmin() || (isAuthenticated() && resource.data.uid == request.auth.uid);

      // Write: STRICTLY ADMIN (Backend/Server Actions only)
      // Clients never write purely to enrollment
      allow write: if isAdmin();
    }

    // =========================================================================
    // 4. COURSES & CONTENT (LMS)
    // =========================================================================
    match /courses/{courseId} {
      // Public Read (Catalog): Must be Published AND Open
      allow read: if (isPublished() && isCourseOpen()) || isAdmin();
      
      // Write: Admin only
      allow write: if isAdmin();

      // Subcollections
      match /modules/{moduleId} {
         allow read: if (isAdmin() || hasActiveEnrollment(courseId));
         allow write: if isAdmin();
      }

      match /lessons/{lessonId} {
         // Lesson Visibility: Enrolled & Lesson is Published
         allow read: if (isAdmin() || (hasActiveEnrollment(courseId) && isPublished()));
         allow write: if isAdmin();
      }
    }

    // =========================================================================
    // 5. PROGRESS & COMPLETION
    // =========================================================================
    match /lesson_progress/{docId} {
      // ID: {uid}_{courseId}_{lessonId}
      
      // Read: Owner or Admin
      allow read: if isAdmin() || (isAuthenticated() && resource.data.uid == request.auth.uid);

      // Write: Owner (Mark as complete)
      // Constraint: Must have active enrollment
      allow write: if isAdmin() || (
        isAuthenticated() && 
        request.resource.data.uid == request.auth.uid &&
        hasActiveEnrollment(request.resource.data.courseId)
      );
    }

    // =========================================================================
    // 6. CERTIFICATES
    // =========================================================================
    match /certificates/{certId} {
      // Private Certificate Data
      allow read: if isAdmin() || (isAuthenticated() && resource.data.uid == request.auth.uid);
      allow write: if isAdmin(); // Only backend issues certificates
    }

    match /certificatePublic/{code} {
      // Public Verification
      allow read: if true;
      allow write: if isAdmin();
    }

    // =========================================================================
    // 7. SITE SETTINGS (CMS-lite)
    // =========================================================================
    match /siteSettings/{docId} {
      // Public read for layout/footer
      allow read: if true;
      // Admin write only
      allow write: if isAdmin();
    }
  }
}
