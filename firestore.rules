rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function hasTenant(tenantId) {
      return request.auth.token.tenantId == tenantId;
    }

    function isSameTenant() {
      return request.auth.token.tenantId == resource.data.tenantId;
    }

    // Default: Deny everything
    match /{document=**} {
      allow read, write: if false;
    }

    // --- Users ---
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      // Admin can read/write all users (add checks for admin claim)
      allow read, write: if isSignedIn() && request.auth.token.admin == true;
    }

    // --- Courses (Hardened Isolation) ---
    match /courses/{courseId} {
      allow read: if isSignedIn() && (isSameTenant() || resource.data.isPublic == true);
      allow write: if isSignedIn() && request.auth.token.admin == true && isSameTenant();
      
      // Sub-collections: Materials, Announcements, Community
      match /{allSubcollections=**} {
        allow read: if isSignedIn() && (
          get(/databases/$(database)/documents/courses/$(courseId)).data.tenantId == request.auth.token.tenantId
        );
        allow write: if isSignedIn() && (
          get(/databases/$(database)/documents/courses/$(courseId)).data.tenantId == request.auth.token.tenantId
        );
      }
    }

    // --- Community Threads & Replies ---
    match /community_threads/{threadId} {
      allow read: if isSignedIn() && isSameTenant();
      allow create: if isSignedIn() && request.resource.data.tenantId == request.auth.token.tenantId;
      allow update, delete: if isSignedIn() && (
        (request.auth.uid == resource.data.authorId && isSameTenant()) ||
        (request.auth.token.admin == true && isSameTenant())
      );
    }

    // --- Presence (TTL/Ephemeral) ---
    match /presence/{presenceId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Add tenant check if needed
    }
  }
}
