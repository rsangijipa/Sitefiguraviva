rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    
    // --- Helpers ---

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    function isBelowMaxSize(sizeMB) {
      return request.resource.size < sizeMB * 1024 * 1024;
    }
    
    // Strict enrollment check (Active status)
    function isEnrolledActive(courseId) {
       return request.auth != null && 
              firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)/enrollments/$(courseId)) &&
              firestore.get(/databases/(default)/documents/users/$(request.auth.uid)/enrollments/$(courseId)).data.status == 'active';
    }

    // Default Deny
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // --- Public Assets ---

    // Blog Images
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isBelowMaxSize(10);
    }
    
    // Gallery
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && request.resource.contentType.matches('image/.*') && isBelowMaxSize(10);
    }

    // Course Covers
    match /courses/covers/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && request.resource.contentType.matches('image/.*') && isBelowMaxSize(5);
    }

    // Public Documents
    match /public/docs/{allPaths=**} {
       allow read: if true;
       allow write: if isAdmin() && isBelowMaxSize(20);
    }

    // --- Restricted Academic Content ---

    // Course Materials: courses/{courseId}/materials/{filename}
    // Deep match to capture courseId
    match /courses/{courseId}/materials/{allPaths=**} {
      allow read: if isAdmin() || (request.auth != null && isEnrolled(courseId));
      allow write: if isAdmin() && isBelowMaxSize();
    }
    
    // --- Legacy Clean-up Paths (Optional support during migration) ---
    match /images/{allPaths=**} {
       allow read: if true;
       allow write: if isAdmin();
    }
    match /documents/{allPaths=**} {
       allow read: if request.auth != null; 
       allow write: if isAdmin();
    }
  }
}
