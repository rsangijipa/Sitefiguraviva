# Admin
VITE_ADMIN_USER=admin
VITE_ADMIN_PASS_HASH=change_this_hash_in_production
# Admin Bootstrap (New - Set your email here to auto-claim admin)
ADMIN_BOOTSTRAP_EMAILS="seu@email.com"

# Firebase (Core - Required)
# Note: Admin SDK now supports FIREBASE_PROJECT_ID fallback.
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# Firebase Admin (Server Side)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n..."

# --- LEGACY (Supabase) ---
# Supabase Configuration (Public)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY="your-publishable-key"

# Supabase Configuration (Private - Do not expose to client)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_JWT_SECRET="your-jwt-secret"
SUPABASE_PUBLISHABLE_KEY="your-publishable-key"
SUPABASE_SECRET_KEY="your-secret-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Postgres Connection (Prisma/Pooler)
POSTGRES_DATABASE="postgres"
POSTGRES_HOST="db.your-project.supabase.co"
POSTGRES_PASSWORD="your-db-password"
POSTGRES_USER="postgres"
POSTGRES_URL="postgres://postgres.your-project:password@aws-0-region.pooler.supabase.com:6543/postgres?sslmode=require&supa=base-pooler.x"
POSTGRES_PRISMA_URL="postgres://postgres.your-project:password@aws-0-region.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgres://postgres.your-project:password@aws-0-region.pooler.supabase.com:5432/postgres?sslmode=require"
